<!DOCTYPE html>
<html lang="en">
<head>
  <title>Jobs</title>
</head>
<body>


<div class="container">
  
<h2>Jobs</h2>
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Job Title</th>
      <th>Employer</th>
      <th>Sector</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.employer %></td>
        <td><%= job.sector_id %></td>
        <td><%= link_to 'Show', job, class:'btn btn-mini btn-success'  %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class:'btn btn-mini btn-danger' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, class:'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
