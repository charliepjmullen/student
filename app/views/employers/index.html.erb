<style>
h1 {
    text-align: center;
}

</style>


<h1>Listing employers</h1>

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">


<div class="w3-container">
  

<table class="w3-table-all w3-small">
  <thead>
    <tr class="w3-blue ">
      <th>Name</th>
      <th>Location</th>
      <th>Sector</th>
      <th>email</th>
      <th>password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.emp_name %></td>
        <td><%= employer.location %></td>
        <td><%= employer.emp_sector %></td>
        <td><%= employer.emp_email %></td>
        <td><%= employer.password_digest %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employer', new_employer_path %>
